{
  "name": "@michaelwolz/camera-preview-lite",
  "version": "6.0.0",
  "description": "Fork of the capacitor-community/camera-preview plugin focusing on high resolution photos without bloating up the code.",
  "type": "module",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin -destination generic/platform=iOS && cd ..",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "build": "npm run clean && tsc && rollup -c rollup.config.js",
    "clean": "rimraf './dist'",
    "watch": "tsc --watch",
    "lint": "concurrently -g \"npm:eslint\" \"npm:prettier -- --check\" \"npm run swiftlint -- lint ios\"",
    "fmt": "concurrently -g \"npm:eslint -- --fix\" \"npm:prettier -- --write\" \"npm:swiftlint -- lint --fix --format ios\"",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "swiftlint": "node-swiftlint",
    "prepublishOnly": "npm run build",
    "prepare": "husky && npm run build"
  },
  "author": "Michael Wolz",
  "license": "MIT",
  "devDependencies": {
    "@capacitor/android": "^6.1.2",
    "@capacitor/core": "^6.1.2",
    "@capacitor/ios": "^6.1.2",
    "@ionic/eslint-config": "^0.4.0",
    "@ionic/prettier-config": "^4.0.0",
    "@ionic/swiftlint-config": "^1.1.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "husky": "^9.1.4",
    "prettier": "^3.3.3",
    "prettier-plugin-java": "^2.6.4",
    "pretty-quick": "^4.0.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.20.0",
    "swiftlint": "^1.0.2",
    "typescript": "^5.5.4"
  },
  "peerDependencies": {
    "@capacitor/core": "^6.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "files": [
    "dist/",
    "ios/",
    "android/",
    "CapacitorCommunityCameraPreview.podspec"
  ],
  "keywords": [
    "capacitor",
    "plugin",
    "native"
  ],
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/michaelwolz/camera-preview-lite"
  },
  "bugs": {
    "url": "https://github.com/michaelwolz/camera-preview-lite/issues"
  }
}
